<?xml version="1.0"?>
<t name="Student info" t-name="verita.adm_additional_student_information">
    <t t-call="adm.template_application_form_commons">
        <t t-set="head">
            <link rel="stylesheet"
                  href="/adm/static/src/css/form_application.css"/>
        </t>
        <t t-set="title">Additional Student Information</t>

        <t t-set="url_next"
           t-value="'/admission/applications/%s/schools' % application_id.id"/>

        <form class="container p-4"
              data-adm-model-fields="1">
            <t t-set="user_family_id"
               t-value="application_id.current_user_access_id.family_id"/>
            <section class="row">
                <div class="col-12 col-md-6">
                    <div class="custom-control custom-switch">
                        <input type="checkbox"
                               data-adm-field="x_undergone_treatment"
                               t-att-value="application_id.x_undergone_treatment"
                               name="x_undergone_treatment"
                               id="x_undergone_treatment"
                               t-att-checked="application_id.x_undergone_treatment"
                               data-adm-field-type="BOOLEAN"
                               t-att-required="is_required('x_undergone_treatment')"
                               class="custom-control-input"/>
                        <label class="custom-control-label"
                               for="x_undergone_treatment">
                            Has your child ever undergone psychological, developmental, or educational testing or
                            treatment?
                            <span class="text-danger" t-if="is_required('x_undergone_treatment')">
                                *
                            </span>
                        </label>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="custom-control custom-switch">
                        <input type="checkbox"
                               data-adm-field="x_special_needs_or_fears"
                               t-att-value="application_id.x_special_needs_or_fears"
                               name="x_special_needs_or_fears"
                               id="x_special_needs_or_fears"
                               t-att-checked="application_id.x_special_needs_or_fears"
                               data-adm-field-type="BOOLEAN"
                               t-att-required="is_required('x_special_needs_or_fears')"
                               class="custom-control-input"/>
                        <label class="custom-control-label"
                               for="x_special_needs_or_fears">
                            Does your child have any special needs or fears?
                            <span class="text-danger" t-if="is_required('x_special_needs_or_fears')">
                                *
                            </span>
                        </label>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="custom-control custom-switch">
                        <input type="checkbox"
                               data-adm-field="x_behaviors_to_aware"
                               t-att-value="application_id.x_behaviors_to_aware"
                               name="x_behaviors_to_aware"
                               id="x_behaviors_to_aware"
                               t-att-checked="application_id.x_behaviors_to_aware"
                               data-adm-field-type="BOOLEAN"
                               t-att-required="is_required('x_behaviors_to_aware')"
                               class="custom-control-input"/>
                        <label class="custom-control-label"
                               for="x_behaviors_to_aware">
                            Does your child have any behaviorss/habits that we should be aware of at this time?
                            <span class="text-danger" t-if="is_required('x_behaviors_to_aware')">
                                *
                            </span>
                        </label>
                    </div>
                </div>
                <div class="col-12 mt-4">
                    <table class="w-100 table">
                        <tr>
                            <th>Level</th>
                            <th>Description</th>
                            <th>CEFR Level </th>
                            <th></th>
                        </tr>
                        <tr>
                            <td>Level 0 </td>
                            <td>Beginner</td>
                            <td>A1</td>
                            <td>
                                <p>Can understand and use familiar everyday expressions and very basic phrases aimed at
                                    the satisfaction of needs of a concrete type.</p>

                                <p>Can introduce him/herself and others and can ask and answer questions about personal
                                    details such as where he/she lives, people he/she knows and things he/she has.</p>

                                <p>Can interact in a simple way provided the other person talks slowly and clearly and
                                    is prepared to help.</p>
                            </td>
                        </tr>
                        <tr>
                            <td>Level 1 </td>
                            <td>Elementary level of English</td>
                            <td>A2</td>
                            <td>
                                <p>Can understand sentences and frequently used expressions related to areas of most
                                    immediate relevance (e.g. very basic personal and family information, shopping,
                                    local geography, employment).</p>

                                <p>
                                    Can communicate in simple and routine tasks requiring a simple and direct exchange
                                    of information on familiar and routine matters.
                                </p>

                                <p>
                                    Can describe in simple terms aspects of his/her background, immediate environment
                                    and matters in areas of immediate Basic need.
                                </p>
                            </td>
                        </tr>
                        <tr>
                            <td>Level 2</td>
                            <td>Low intermediate level of English </td>
                            <td>B1</td>
                            <td>
                                <p>
                                    Can understand the main points of clear standard input on familiar matters regularly
                                    encountered in work, school, leisure, etc.
                                </p>

                                <p>
                                    Can deal with most situations likely to arise whilst travelling in an area where the
                                    language is spoken.
                                </p>

                                <p>
                                    Can produce simple connected text on topics which are familiar or of personal
                                    interest.
                                </p>

                                <p>
                                    Can describe experiences and events, dreams, hopes and ambitions and briefly give
                                    reasons and explanations for opinions and plans.
                                </p>
                            </td>
                        </tr>
                        <tr>
                            <td>Level 3</td>
                            <td>High intermediate level of English </td>
                            <td>B2</td>
                            <td>

                                <p>

                                    Can understand the main ideas of complex text on both concrete and abstract topics,
                                    including technical discussions in his/her field of specialization.
                                </p>
                                <p>
                                    Can interact with a degree of fluency and spontaneity that makes regular interaction
                                    with native speakers quite possible without strain for either party.
                                </p>
                                <p>
                                    Can produce clear, detailed text on a wide range of subjects and explain a viewpoint
                                    on a topical issue giving the advantages and Independent disadvantages of various
                                    options
                                </p>
                            </td>
                        </tr>
                        <tr>
                            <td>Level 4</td>
                            <td>Advanced level of English </td>
                            <td>C1</td>
                            <td>
                                <p>Can understand a wide range of demanding, longer texts, and recognize implicit
                                    meaning.</p>

                                <p>Can express him/herself fluently and spontaneously without much obvious searching for
                                    expressions.</p>

                                <p>Can use language flexibly and effectively for social, academic and professional
                                    purposes.</p>

                                <p>Can produce clear, well-structured, detailed text on complex subjects, showing
                                    controlled use of organizational patterns, connectors and cohesive devices.</p>
                            </td>
                        </tr>
                        <tr>
                            <td>Level 5</td>
                            <td>Proficient in English </td>
                            <td>C2</td>
                            <td>
                                <p>Can understand with ease virtually everything heard or read.</p>
                                <p>Can summarize information from different spoken and written sources, reconstructing
                                    arguments and accounts in a coherent presentation.</p>
                                <p>Can express him/herself spontaneously, very fluently and precisely, differentiating
                                    finer shades of Proficient meaning even in more complex situations.L</p>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-12 col-md-6 form-group">
                    <label for="x_child_english_level">
                        Please select the level of English your child is at:
                        <span class="text-danger" t-if="is_required('state_id')">*</span>
                    </label>
                    <select id="x_child_english_level"
                            name="x_child_english_level"
                            data-adm-field="x_child_english_level"
                            t-att-required="is_required('x_child_english_level')"
                            class="form-control">

                        <t t-set="x_child_english_level_values" t-value="application_id.sudo()._fields['x_child_english_level'].selection"/>
                        <option selected="selected" disabled="disabled" style="display:none;">
                            -Select a level-
                        </option>
                        <t t-foreach="x_child_english_level_values" t-as="language">
                            <t t-set="langage_val" t-value="language[0]"/>
                            <t t-set="langage_label" t-value="language[1]"/>
                            <option t-att-selected="application_id.x_child_english_level == langage_val"
                                    t-att-value="langage_val">
                                <t t-esc="langage_label"/>
                            </option>
                        </t>
                    </select>
                </div>
                <div class="col-12 col-md-6 form-group">
                    <label for="x_wished_second_language">
                        Please select the second language you want your child to study at Verita (only applicable for Year 3 and above ):
                        <span class="text-danger" t-if="is_required('state_id')">*</span>
                    </label>
                    <select id="x_wished_second_language"
                            name="x_wished_second_language"
                            data-adm-field="x_wished_second_language"
                            t-att-required="is_required('x_wished_second_language')"
                            class="form-control">

                        <t t-set="x_wished_second_language_values" t-value="application_id.sudo()._fields['x_wished_second_language'].selection"/>
                        <option selected="selected" disabled="disabled" style="display:none;">
                            -Select a language-
                        </option>
                        <t t-foreach="x_wished_second_language_values" t-as="language">
                            <t t-set="langage_val" t-value="language[0]"/>
                            <t t-set="langage_label" t-value="language[1]"/>
                            <option t-att-selected="application_id.x_wished_second_language == langage_val"
                                    t-att-value="langage_val">
                                <t t-esc="langage_label"/>
                            </option>
                        </t>
                    </select>
                </div>
            </section>
        </form>
    </t>
</t>