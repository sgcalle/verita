<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="res_config_settings_vieform_inherit_tuition"
            model="ir.ui.view">
        <field name="name">school.finance.res.config.settings.view.form.inherit.tuition</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id"
               ref="school_finance.res_config_settings_view_form"/>
        <field name="arch"
               type="xml">
            <div id="school_finance_invoicing"
                 position="inside">
                <h2>Tuition Plan</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Tuition plan categoy</span>
                            <div class="text-muted">
                                The system should know the right tuition plan category
                            </div>
                            <div class="row mt16">
                                <label for="tuition_plan_categ_id"
                                       string="Tuition Category"
                                       class="col-lg-4 o_light_label"/>
                                <field name="tuition_plan_categ_id"
                                       class="oe_inline"/>
                            </div>
                            <div class="row mt16">
                                <label for="food_plan_categ_id"
                                       string="Food category"
                                       class="col-lg-4 o_light_label"/>
                                <field name="food_plan_categ_id"
                                       class="oe_inline"/>
                            </div>
                            <div class="row mt16">
                                <label for="shadow_teacher_categ_id"
                                       string="Shadow teacher category"
                                       class="col-lg-4 o_light_label"/>
                                <field name="shadow_teacher_categ_id"
                                       class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>