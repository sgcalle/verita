<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="reenrollment_announcement_mail_template_id" model="mail.template">
            <field name="name">Adm Reenrollment: Reenrollment announcement</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="subject">Reenrollment announcement: Pending reenrollment packages</field>
            <field name="email_from">"${user.env.company.name | safe}" &lt;${(user.env.company.email or user.email) | safe}&gt;</field>
            <field name="email_to">${object.email|safe}</field>
            <field name="lang">${object.user_ids[0].lang}</field>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" style="padding-top:16px;background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;">
                    <tbody>
                    <tr>
                        <td align="center">
                            <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding:16px;background-color: white; color: #454748; border-collapse:separate;">
                                <tbody>
                                <!-- HEADER -->
                                <tr>
                                    <td align="center" style="min-width:590px;">
                                        <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width:590px;background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                            <tbody>
                                            <tr>
                                                <td valign="middle">
                                                    <span style="font-size:10px;">Your Account</span><br/>
                                                    <span style="font-size:20px;font-weight: bold;">
                                                        ${object.name}
                                                    </span>
                                                </td>
                                                <td valign="middle" align="right">
                                                    <img src="/logo.png?company=${object.env.company.id}" style="padding:0px;margin: 0px; height: auto; width: 80px;" alt="${object.env.company.name}"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="2" style="text-align:center;">
                                                    <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;"/>
                                                </td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                                <!-- CONTENT -->
                                <tr>
                                    <td align="center" style="min-width:590px;">
                                        <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width:590px;background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                            <tbody>
                                            <tr>
                                                <td valign="top" style="font-size:13px;">
                                                    <p>
                                                        Dear ${object.name},
                                                        <br/>
                                                    </p>
                                                    <p>
                                                        You have pending reenrollment packages for:
                                                        </p><ul>
                                                            % for reenrollment in  object.user_ids.mapped('reenrollment_ids')
                                                                <li>${reenrollment.name}</li>
                                                            % endfor
                                                        </ul>
                                                        <div style="margin:16px 0px 16px 0px;display: flex;justify-content: center;">
                                                            <a href="/web/login?redirect=/my/reenrollments" style="justify-content:center;background-color:#875A7B;padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                                                                Reenrollment packages
                                                            </a>
                                                        </div>
                                                        If you do not expect this, you can safely ignore this email.
                                                        Thanks,<br/>
                                                        ${user.signature | safe}<br/>
                                                    <p></p>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align:center;">
                                                    <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;"/>
                                                </td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                                <!-- FOOTER -->
                                <tr>
                                    <td align="center" style="min-width:590px;">
                                        <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width:590px;background-color: white; font-size: 11px; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                            <tbody>
                                            <tr>
                                                <td valign="middle" align="left">
                                                    ${object.env.company.name}
                                                </td>
                                            </tr>
                                            <tr>
                                                <td valign="middle" align="left" style="opacity:0.7;">
                                                    ${object.env.company.phone}
                                                    % if object.env.company.email
                                                        | <a href="'mailto:%s' % ${object.env.company.email}" style="text-decoration:none;color: #454748;">${object.env.company.email}</a>
                                                    % endif
                                                    % if object.env.company.website
                                                        | <a href="'%s' % ${object.env.company.website}" style="text-decoration:none;color: #454748;">
                                                        ${object.env.company.website}
                                                    </a>
                                                    % endif
                                                </td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    <!-- POWERED BY -->
                    <tr>
                        <td align="center" style="min-width:590px;">
                            <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width:590px;background-color: #F1F1F1; color: #454748; padding: 8px; border-collapse:separate;">
                                <tbody>
                                <tr>
                                    <td style="text-align:center;font-size: 13px;">
                                        Powered by <a target="_blank" href="https://www.odoo.com?utm_source=db&amp;utm_medium=auth" style="color:#875A7B;">Odoo</a>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </field>
        </record>
    </data>
</odoo>